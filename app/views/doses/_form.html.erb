<!-- cf https://stackoverflow.com/questions/17437373/simple-form-for-fails-with-cant-write-unknown-attribute-builder -->

<%= simple_form_for([@cocktail, Dose.new]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :amount %>
  </div>

    <div class="form-inputs">
    <%= f.input :description %>
  </div>

<!--  get ingredient_id -->
  <div class="form-inputs">
    <%= f.input :ingredient_id, collection: Ingredient.all %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>

<% end %>


