<%= simple_form_for(:dose) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :amount %>
  </div>

    <div class="form-inputs">
    <%= f.input :description %>
  </div>

    <div class="form-inputs">
    <%= f.select :cocktail_id, collection: @ingredients %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
